{
    "compilerOptions": {
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "client/*"
            ],
            "common": [
                "common/*"
            ],
            "@reducer/*": [
                "client/reducer/*"
            ],
            "@components/*": [
                "client/components/*"
            ],
            "@server/*": [
                "server/*"
            ],
            "@models/*": [
                "server/models/*"
            ]
        },
        "experimentalDecorators": true,
        "include": ["server/**"],
        "exclude": [
            "node_modules",
            "dist"
        ]
    }
}