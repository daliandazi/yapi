{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": false,
    "pretty": true,
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "client/*"
      ],
      "common": [
        "common/*"
      ],
      "@reducer/*": [
        "client/reducer/*"
      ],
      "@components/*": [
        "client/components/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@models/*": [
        "server/models/*"
      ]
    }
  },
  "include": ["server"],
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}